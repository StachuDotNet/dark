[<HttpHandler("GET", "/stats")>]
let _handler _req =
  let types =
    (DB.getAll PackageTypeDB) |> PACKAGE.Darklang.Stdlib.List.length |> Int.toString

  let fns =
    (DB.getAll PackageFnDB) |> PACKAGE.Darklang.Stdlib.List.length |> Int.toString

  let constants =
    (DB.getAll PackageConstantDB)
    |> PACKAGE.Darklang.Stdlib.List.length
    |> Int.toString

  let items =
    (DB.getAll NamesDB) |> PACKAGE.Darklang.Stdlib.List.length |> Int.toString

  let body =
    $"Package stats:\ntypes: {types}, fns: {fns}, constants: {constants}\n\ntotal items in NamesDB: {items}"
    |> String.toBytes

  PACKAGE.Darklang.Stdlib.Http.response body 200


