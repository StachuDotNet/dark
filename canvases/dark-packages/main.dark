[<HttpHandler("GET", "/owner/:owner")>]
let _handler _req =
  let allItems =
    (DB.getAll NamesDB)
    |> List.filter (fun item -> item.owner == owner)
    |> List.map (fun i -> (i.owner, i.modules |> String.join ".", i.name))
    |> List.map (fun m ->
      let (owner, modules, name) = m
      $"{owner}.{modules}.{name}")
    |> List.sort
    |> String.join "\n"

  let respBody =
    if allItems == "" then
      ($"owner {owner} not found") |> String.toBytes
    else
      allItems |> String.toBytes

  PACKAGE.Darklang.Stdlib.Http.response respBody 200


[<HttpHandler("GET", "/modules/:name")>]
let _handler _req =
  let owner = name |> String.split "." |> PACKAGE.Darklang.Stdlib.List.head |> unwrap
  let modules = name |> String.split "." |> PACKAGE.Darklang.Stdlib.List.drop 1

  let fns = DB.getAll PackageFnDB
  let types = DB.getAll PackageTypeDB
  let constants = DB.getAll PackageConstantDB

  let respBody =
    (PACKAGE.Darklang.Stdlib.Packages
      { types =
          types
          |> List.filter (fun t ->
            t.name.owner == owner && t.name.modules == modules)
        fns =
          fns
          |> List.filter (fun f ->
            f.name.owner == owner && f.name.modules == modules)
        constants =
          constants
          |> List.filter (fun c ->
            c.name.owner == owner && c.name.modules == modules) })
    |> Json.serialize<PACKAGE.Darklang.Stdlib.Packages>
    |> unwrap
    |> String.toBytes

  PACKAGE.Darklang.Stdlib.Http.response respBody 200


[<HttpHandler("GET", "/category/:name")>]
let _handler _req =
  let fullName = name |> String.split "."
  let owner = fullName |> PACKAGE.Darklang.Stdlib.List.head |> unwrap
  let name = fullName |> PACKAGE.Darklang.Stdlib.List.last |> unwrap

  let modules =
    fullName
    |> (PACKAGE.Darklang.Stdlib.List.drop 1)
    |> PACKAGE.Darklang.Stdlib.List.dropLast


  // CLEANUP: Use DB.query instead - this is currently blocked by the unavailability of resolved typeArgs in lambdaToSql
  let allItems =
    (DB.getAll NamesDB)
    |> List.filter (fun item ->
      item.owner == owner && item.modules == modules && item.name == name)
    |> List.map (fun item -> item.category)
    |> PACKAGE.Darklang.Stdlib.List.head

  let respBody =
    match allItems with
    | Some Fn -> "fn"
    | Some Type -> "type"
    | Some Constant -> "constant"
    | Some Module -> "module"
    | None -> "not found"

  PACKAGE.Darklang.Stdlib.Http.response (respBody |> String.toBytes) 200